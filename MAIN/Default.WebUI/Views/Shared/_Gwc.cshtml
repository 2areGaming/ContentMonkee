@model dynamic
@{
    Layout = null;
}

<script>
    var gwc = {};
    window.gwc = gwc;
    @if(Model!=null)
    {
        <text>
           gwc.serverpath = "@(Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/'))";
        </text>
    }
    @{
        if (Model is AdminViewModel || Model is AdminWidgetViewModel || Model is SiteViewModel)
        {
            if(Model.CurrentSiteSetting != null) {
            <text>
                gwc.sitesettingpath = "Content/tcSitesettingID";
                gwc.sitesettingid = "@(Model.CurrentSiteSetting.Id)";
            </text>
            }
        }
    }
</script>