@model AdminViewModel


<table class="table table-hover @Html.Raw(Model.Redirections.Count == 0 ? string.Empty : "tablesorter {sortlist: [[1,0]]}")">
    <thead>
        <tr>
            <th class="{sorter: false}"><a class="btn btn-primary btn-add" href="/admin/redirectionedit/">Add</a></th>
            <th>Old url</th>
            <th>New url</th>
            <th class="{sorter: false}"> </th>
        </tr>
    </thead>
    <tbody class="item-selection">
        @if (Model.Redirections.Count == 0)
        {
            <tr>
                <td colspan="4">
                    You can define a new redirection here.
                </td>
            </tr>
        }
        else
        {
            foreach (var redirection in Model.Redirections)
            {
                <tr>
                    <td></td>
                    <td>
                        @redirection.oldSEOUrl
                    </td>
                    <td>
                        @redirection.newSEOUrl
                    </td>
                    <td>
                        <a class="btn btn-default btn-xs" href="/admin/redirectionedit/@redirection.Id">
                            <i class="fa fa-pencil"></i>
                        </a>
                        &nbsp;
                        <a class="btn btn-danger btn-xs delete-confirm"
                           data-action="/admin/redirectiondelete"
                           data-id="@redirection.Id"
                           data-title="Redirection löschen"
                           data-description="Möchten Sie wirklich @redirection.oldSEOUrl nicht mehr umleiten?">
                            <i class="fa fa-trash-o"></i>
                        </a>
                        &nbsp;
                    </td>

                </tr>
            }
        }

    </tbody>
</table>
