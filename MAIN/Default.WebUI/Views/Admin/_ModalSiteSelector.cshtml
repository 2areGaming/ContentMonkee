@{
    Layout = null;
}


<!-- Modal -->
<div class="modal fade" id="siteSelector" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-file-text-o"></i> Create new page</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("SiteAdd", "Admin", FormMethod.Post, new { id = "addSiteForm" }))
                {
                    <input type="hidden" value="" name="siteId" />

                    <div class="form-group">
                        <label for="name" class="control-label">Name</label>
                        <input type="text"
                               class="form-control"
                               name="name" id="name"
                               placeholder="Name"
                               value=""
                               oninput="HandleSiteUrl('#url', 'value', this, false);"
                               onblur="HandleSiteUrl('#url', 'value', this, true);"/>
                    </div>

                    <div class="form-group">
                        <label class="well" for="startsite">
                            <input id="startsite" name="startsite" type="checkbox" />
                            Homepage
                        </label>
                    </div>

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="$('#addSiteForm').submit()">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


